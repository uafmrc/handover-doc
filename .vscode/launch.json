    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Handover Doc (Nodemon)",
            "runtimeExecutable": "nodemon",
            "args": ["--exec", "ts-node", "src/index.ts", "generate"],
            "restart": true,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Handover Doc (Direct)",
            "runtimeExecutable": "ts-node",
            "runtimeArgs": ["src/index.ts", "generate"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}